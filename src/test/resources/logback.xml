<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} # %method [%line] - %msg%n</Pattern>
		</layout>
	</appender>


	<logger name="org.thymeleaf" level="OFF" />
	<logger name="org.springframework" level="OFF" />
	<logger name="org.springframework.data" level="DEBUG" />
	<logger name="org.hibernate" level="OFF" />
	<logger name="com.ibatis" level="OFF" />
	<logger name="java.sql" level="DEBUG" />

	<logger name="com.u2ware.springfield" level="DEBUG" />
	<logger name="example.u2ware.springfield" level="DEBUG" />

	<!--  
	<logger name="com.u2ware.springfield.config" level="INFO" />
	<logger name="com.u2ware.springfield.domain" level="OFF" />
	<logger name="com.u2ware.springfield.eventmodel" level="OFF" />
	<logger name="com.u2ware.springfield.metamodel" level="OFF" />

	<logger name="com.u2ware.springfield.controller" level="OFF" />
	<logger name="com.u2ware.springfield.repository" level="OFF" />
	<logger name="com.u2ware.springfield.service" level="OFF" />
	-->

	<root level="OFF">
		<appender-ref ref="STDOUT" />
	</root>
	
</configuration>