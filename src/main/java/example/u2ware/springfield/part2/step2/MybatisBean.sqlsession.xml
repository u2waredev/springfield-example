<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="example.u2ware.springfield.part2.step2.MybatisBean">



	<select id="exists" 
		parameterType="example.u2ware.springfield.part2.step2.MybatisBean" 
		resultType="integer">
		select count(id) from MybatisBean 
		where id = #{id}
	</select>

	<insert id="create" 
		parameterType="example.u2ware.springfield.part2.step2.MybatisBean">
		 insert into MybatisBean ( id, password, contry, address ) values ( #{id}, #{password}, #{contry}, #{address} )
	</insert>

	<select id="read" 
		parameterType="example.u2ware.springfield.part2.step2.MybatisBean" 
		resultType="example.u2ware.springfield.part2.step2.MybatisBean">
		select count(id) from 	MybatisBean 
		where id = #{id}
	</select>

	<update id="update" 
		parameterType="example.u2ware.springfield.part2.step2.MybatisBean">
		update MybatisBean set password = #{password} , contry = #{contry}, address = #{address}
		where id = #{id}
	</update>

	<delete id="delete" 
		parameterType="example.u2ware.springfield.part2.step2.MybatisBean">
		delete from MybatisBean
		where id = #{id}
	</delete>

	<select id="findAll" 
		parameterType="map" 
		resultType="example.u2ware.springfield.part2.step2.MybatisBean">
		select * from MybatisBean
		<include refid="whereSyntax"/>
		<include refid="orderSyntax"/>
	</select>

	<select id="findAllCount" 
		parameterType="map"
		resultType="long">
		select count(*) from MybatisBean 
		<include refid="whereSyntax"/>
	</select>


	<sql id="whereSyntax">
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="query.id != null"> and id = #{query.id}</if>
			<if test="query.password != null">and password = #{query.password}</if>
		</trim>
	</sql>
	<sql id="orderSyntax">
		<trim prefix="order by" prefixOverrides=", ">
			<foreach item="item" index="index" collection="pageable.sortOrders">
				<if test="item.direction == 1">
					, ${item.property} asc
				</if>
				<if test="item.direction == -1">
					, ${item.property} desc
				</if>
			</foreach>
		</trim>
	</sql>

	<select id="search" 
		parameterType="map" 
		resultType="example.u2ware.springfield.part2.step2.MybatisBean">
		select * from MybatisBean
		<include refid="whereSyntax"/>
		<include refid="orderSyntax"/>
	</select>

	<select id="searchCount" 
		parameterType="map"
		resultType="long">
		select count(*) from MybatisBean 
		<include refid="whereSyntax"/>
	</select>





</mapper>